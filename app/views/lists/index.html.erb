<div class="container">
  <div class="row justify-content-center mb-4">
    <h1 class="text-center">Movies Watch List</h1>
    <div class="col-12 text-center">
    <%= link_to "Create a List", new_list_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <% @lists.in_groups_of(3, false).each do |allLists| %>
      <div class="row mb-4">
        <% allLists.compact.each do |listCard| %>
          <div class="col-md-4">
            <%= render listCard %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
